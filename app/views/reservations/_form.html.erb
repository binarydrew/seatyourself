
<%= f.label :date %>
<%= f.date_field :date %><br />
<%= f.label :time %>
<%= f.time_select :time, { ampm: false, minute_step: 30, ignore_time: true }%><br />

<%= f.label :duration %>
<%= f.select :duration, (1..3) %> hours<br />
<%= f.label :guests %>
<%= f.select :guests, (1..8) %> guests <br />

<%= f.submit "Save Reservation" %>

