<h1>Create Reservation for <%= @restaurant.name %></h1>

<%= form_for new_restaurant_reservation_path do |f| %>
<%= f.label :date %>
<%= f.date_field :date %><br />
<%= f.label :time %>
<%= f.time_select :time, { ampm: false, minute_step: 15 }%><br />
<%= f.label :duration %>
<%= f.select :duration, (1..3) %> hours<br />
<%= f.label :guests %>
<%= f.select :guests, (1..8) %> guests <br />

<%= f.submit "Save Reservation" %>


<% end %>