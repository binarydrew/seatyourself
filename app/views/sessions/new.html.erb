<div class="row">
	<div class="large-12 columns">
		<h1>Log In</h1>
	</div>
</div>

<%= form_tag sessions_path do %>
	<div class="row">
	  <div class="large-4 columns">
	    <%= label_tag :email %><br />
	    <%= text_field_tag :email %>
	  </div>
	</div>
	<div class="row">
	  <div class="large-4 columns">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	</div>
	<div class="row">
	  <div class="large-4 columns">
			<%= submit_tag "Log in", :class => "button success" %>
		</div>
	</div>
<% end %>

