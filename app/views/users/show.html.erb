<h1><%= @user.first_name + " " + @user.last_name %></h1>
<%= link_to "Edit me biatch!", edit_user_path %> <%= link_to "Kill that muthafucker!", @user, method: :delete %>


<p>User's email address: <%= @user.email %></p>

<h2>Reservations</h2>

<ul>
  <% @user.reservations.each do |reservation| %>

  <li>
    <h3><%= reservation.restaurant.name %></h3>
    <p><%= reservation.restaurant.address %></p>

    <p>Guests: <%= reservation.guests %> | Time: <%= reservation.datetime %> | Duration: <%= reservation.duration %> hours</p>

    <p><%= link_to "Edit Reservation", edit_restaurant_reservation_path(reservation.restaurant, reservation.id) %></p>


  </li>

  <% end %>

</ul>

